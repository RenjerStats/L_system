             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:L_system.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="97.899" d:DesignWidth="800">
    <Grid Background="Aqua">
        <Button Padding="5" Style="{StaticResource HoverLess}" WindowChrome.IsHitTestVisibleInChrome="True" Command="{Binding MenuCommand}" HorizontalAlignment="Left">
            <Image Source="\View\Resources\Images\Chmonya.jpg"/>
        </Button>
        <TextBlock Text="L system pro max" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Padding="5">
                -
            </Button>
            <Button Padding="5">
                #
            </Button>
            <Button Padding="5">
                X
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
