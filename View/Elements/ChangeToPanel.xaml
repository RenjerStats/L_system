<UserControl x:Class="L_system.View.Elements.ChangeToPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:L_system.View.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListView ItemsSource="{Binding Items}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" SelectionMode="Single" Name="TileList" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ListView.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Создать" Command="{Binding AddInstructionCommand}"/>
                <MenuItem Header="Очистить"/>
            </ContextMenu>
        </ListView.ContextMenu>
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel IsItemsHost="True"/>
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
            <DataTemplate>
                <local:ChangeToBlock Content="{Binding }"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
